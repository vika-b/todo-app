{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-12 text-right mb-5 mt-5">
        <a href="{{ path('todo_create') }}" class="btn btn-success">Create</a>
    </div>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Todo name</th>
            <th scope="col">Todo due date</th>
            <th scope="col">Todo create date</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <th scope="row">{{ todo.id }}</th>
                <td>{{ todo.name }}</td>
                <td>{{ todo.todoDate | date('d-m-Y') }}</td>
                <td>{{ todo.createDate | date('d-m-Y') }}</td>
                <td>
                    <a href="{{ path('todo_view', {'id': todo.id}) }}" class="btn btn-success">View</a>
                    <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="btn btn-notice">Edit</a>
                    <a href="{{ path('todo_delete', {'id': todo.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
